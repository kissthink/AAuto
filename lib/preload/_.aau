	}
}

fiber.generator = function(func,p){
    var fib = fiber.create(func); 
    return function(){
        if( fiber.status(fib) === "dead" ) return;
        var r = { fiber.resume (fib,p)	} 
        if( ..table.shift(r,1) ) return ..table.unpack(r,..table.range(r) ); 
        else error(r[1],2);
    } 
} 
 
