namespace raw {

	convertArray = function(p,l,t="pointer"){
		if(!p) return;
		var a; 
		if( !t[["_struct"]] ) a = toarray(l,t,"v" );
		else{
	    	a = toarray(l,"struct","v");a.v = {t};
		} 
		return convert(p,a).v;
	};
	mixin = function(p,s,v,...){
 		if(v){
    		convert(p, s);
    		..table.mixin(s,v,...)
    	}
    	::CopyMemoryByStruct(p, s, sizeof(s));
    	return s;
	};
}
 
