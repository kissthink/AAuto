thread.setAffinity = function( cpu = 1,h){
	if(!h) h = thread.getHandle();
    return setThrdAffinity( h,cpu );
};

thread.invoke = function(...){
	var r,h = call( thread.create,thread,... );
	if(!r) error(h,2);
	..raw.closehandle( h ); 
}

