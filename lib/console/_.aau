print = ..io.print;
getText = function(s,len){
	open();
	if( s ) ..io.stdout.write( s );
	return  ..io.getText(len) ;	
}

getNumber = function( s,len ){
	var n;
	while( 
	    var _;
	    n = tonumber( getText(s,len) );
	    n === null
	) { 
		s = "请重新输入有效的数值: "
	}
	return n;
}

